<%- include('../partials/header') %>

<form id="new-form" action="/flights" method="POST">
  <label>Airline:
    <select name="airline">
        <option value="American">American</option>
        <option value="Southwest">Southwest</option>
        <option value="United">United</option>
      </select>
  </label><br>
  <label>Airport:
    <select name="airport">
        <option value="AUS" selected>AUS</option>
        <option value="DFW" selected>DFW</option>
        <option value="DEN" selected>DEN</option>
        <option value="LAX" selected>LAX</option>
        <option value="SAN" selected>SAN</option>
      </select>
  </label><br>
  <label>FlightNo:
  <input type='number' name="flightNo">
    </label><br>
    <label>Departs
    <input type="datetime-local" name="depart">
  </label><br>
  <input type="submit" value="Add Flight">
</form>

